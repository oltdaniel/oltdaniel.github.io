---
const { prevPost, nextPost } = Astro.props;
---

{
    (prevPost || nextPost) && (
        <ul class="links-nextprev">
            {prevPost && (
                <li class="links-nextprev-prev">
                    ← Previous
                    <br />{" "}
                    <a href={prevPost.permalink}>{prevPost.data.title}</a>
                </li>
            )}
            {nextPost && (
                <li class="links-nextprev-next">
                    Next →
                    <>
                        <br />
                        <a href={nextPost.permalink}>{nextPost.data.title}</a>
                    </>
                </li>
            )}
        </ul>
    )
}
